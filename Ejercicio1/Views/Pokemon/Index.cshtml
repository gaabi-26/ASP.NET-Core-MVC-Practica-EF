@model IEnumerable<Ejercicio1.Models.Pokemon>

@{
    ViewData["Title"] = "Index";
}

<h1>Pokemons</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
</p>

<div class="row mb-3">
    <div class="col-sm-5">
        <input id="searchBox" class="form-control" type="text" placeholder="Buscar por Nombre..." autocomplete="off" />
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlImagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Debilidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <img src="@(string.IsNullOrWhiteSpace(item.UrlImagen)
                                                              ? "/images/image_not_found.png"
                                                              : item.UrlImagen)"
                     class="img-fluid"
                     style="max-width:40px"
                     onerror="this.onerror=null; this.src='/images/image_not_found.png';" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Debilidad.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
            </td>
        </tr>
                }
    </tbody>
</table>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const box = document.getElementById('searchBox');
            const tbody = document.querySelector('table.table tbody');

            box.addEventListener('input', function () {
                const term = box.value.trim().toLowerCase();
                Array.from(tbody.rows).forEach(row => {
                    const nombre = (row.cells[1]?.textContent || '').trim().toLowerCase();
                    row.style.display = nombre.includes(term) ? '' : 'none';
                });
            });
        });
    </script>
}